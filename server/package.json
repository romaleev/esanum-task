{
	"name": "mp4-to-gif-server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"start": "npm-run-all --parallel --race start:server start:worker",
		"start:server": "wait-on tcp:localhost:6379 && NODE_ENV=development node --no-warnings=ExperimentalWarning --watch --import=tsx src/index.ts",
		"start:worker": "wait-on http://localhost:3000 && NODE_ENV=development node --no-warnings=ExperimentalWarning --watch --import=tsx src/workers/gifWorker.ts",
		"build": "tsc --project tsconfig.server.json && tsc-alias --project tsconfig.server.json",
		"prod:server": "NODE_ENV=production node /app/server/dist/index.js",
		"prod:worker": "NODE_ENV=production node /app/server/dist/workers/gifWorker.js",
		"test": "jest --no-watchman --maxWorkers=80% --detectOpenHandles --testPathIgnorePatterns '^.*/tests/.*$'",
		"test:load": "node --import=tsx tests/load/load.spec.ts",
		"test:watch": "jest --watch --maxWorkers=80%",
		"test:coverage": "jest --coverage"
	},
	"type": "module",
	"devDependencies": {
		"@types/cli-progress": "^3.11.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.13.8",
		"@types/node-cron": "^3.0.11",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^10.0.0",
		"cli-progress": "^3.12.0",
		"eventsource": "^3.0.5",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.11",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0",
		"wait-on": "^8.0.2"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@types/fluent-ffmpeg": "^2.1.27",
		"bullmq": "^5.41.7",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"fluent-ffmpeg": "^2.1.3",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.3"
	}
}
