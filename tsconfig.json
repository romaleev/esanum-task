{
  "compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
		"paths": {
			"#client/*": ["src/client/*"],
			"#server/*": ["src/server/*"],
			"#tests/*": ["tests/*"]
		}
	},
  "include": [
    "src",
		"tests"
  ]
}
