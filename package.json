{
	"name": "easnum-task",
	"version": "1.0.0",
	"description": "esanum task",
	"main": "dist/index.js",
	"scripts": {
		"start": "node --no-warnings=ExperimentalWarning --watch --import=tsx src/server/index.ts",
		"build": "tsc src/server/index.ts --outDir dist",
		"test": "jest --no-watchman --maxWorkers=80%",
		"test-watch": "jest --watch --maxWorkers=80%",
		"coverage": "jest --coverage",
		"lint": "eslint 'src/**/*.ts' && prettier 'src/**/*.ts'",
		"lintfix": "eslint --fix 'src/**/*.ts' && prettier --write 'src/**/*.ts'",
		"update": "npm i npm-check-updates@latest --save-dev && ncu -u && npm i && npm audit fix && npm run lint && npm test",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/romaleev/esanum-task.git"
	},
	"type": "module",
	"typedoc": {
		"entryPoint": "lib/index.ts"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"lint-staged": {
		"lib/**/*.ts": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"keywords": [
		"esanum-task"
	],
	"author": "Roman Malieiev <aromaleev@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/romaleev/esanum-task/issues"
	},
	"homepage": "https://github.com/romaleev/esanum-task#readme",
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.1",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.3",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"lint-staged": "^15.4.3",
		"nodemon": "^3.1.9",
		"npm-check-updates": "^17.1.14",
		"prettier": "^3.4.2",
		"prettier-eslint": "^16.3.0",
		"prettier-plugin-organize-imports": "^4.1.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0"
	}
}
